@model IEnumerable<SongBook.Models.BandListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Band Archive</h2>

<p>
    @Html.ActionLink("Add a Band", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
            </button>
        @TempData["SaveResult"]
   </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Members)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Details", "Band", new { id = item.BandId } )">
                @Html.DisplayFor(modelItem => item.Name)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Members)
        </td>
        <td>
        </td>
    </tr>
   
}

</table>
